{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-hudochenkov/order"
    ],
    "rules": {
        "custom-property-empty-line-before": [
            "never",
            {
                "except": [
                    "after-comment",
                    "first-nested"
                ]
            }
        ],
        "alpha-value-notation": [
            "number"
        ],
        "comment-empty-line-before": [
            "always",
            {
                "ignore": [
                    "after-comment"
                ]
            }
        ],
        "rule-empty-line-before": "always",
        "declaration-empty-line-before": [
            "never",
            {
                "ignore": [
                    "after-comment"
                ]
            }
        ]
    }
}